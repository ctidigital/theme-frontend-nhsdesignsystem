                <a href="<?php echo $block->escapeHtml($block->getViewOrderUrl()); ?>" class="order-number">
                    <?php echo $block->escapeHtml($block->getOrderId()); ?>
                    <span class="nhsuk-u-visually-hidden"><?= /* @escapeNotVerified */ __('View order details') ?></span>
